@model List<Product>

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-content-center">
                    <h4 class="card-title">Products</h4>
                    <a asp-action="Create" class="btn btn-primary btn-rounded">Create</a>
                </div>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>
                                <th>
                                     Name  
                                </th>
                                <th>
                                       Price
                                </th>
                                 <th>
                                       Categories
                                </th>
                                <th>
                                       Tax
                                </th>


                                @*<th>
                                        Status
                                    </th>*@


                                <th>
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="object-fit : cover; width: 100px; height: 100px;" src="~/assets/images/product/@item.ProductImages.FirstOrDefault().Image" />
                                    </td>
                                    <td>
                                        @item.Name
                                     </td>
                                          <td>
                                        @item.Price
                                     </td>

                                        <td>
                                            @foreach (ProductCategory  productCategory in item.ProductCategories)
                                            {
                                                <div>@productCategory.Category.Name</div>
                                            }
                                 
                                        </td>
                                                 <td>
                                        @item.ProductDetail.Tax
                                     </td>
                                    
                                    @*<th>
                                            @if (item.IsDeactive)
                                            {<div class="text-danger">Deactive </div>
                                            }
                                            else

                                            {<div class="text-success">Active </div>
                                            }
                                        </th>*@



                                    <td>
                                        <a class="btn btn-warning btn-sm btn-rounded" asp-action="Detail"
                                           asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-secondary btn-sm  btn-rounded" asp-action="Update"
                                           asp-route-id="@item.Id">Update</a>

                                        @*@if (item.IsDeactive)
                                            {

                                                <a class="btn btn-success btn-sm  btn-rounded" asp-action="Activation"
                                                   asp-route-id="@item.Id">Activate</a>}
                                            else
                                            {
                                                <a class="btn btn-danger btn-sm  btn-rounded" asp-action="Activation"
                                                   asp-route-id="@item.Id">Deactivate</a>
                                            }*@


                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


